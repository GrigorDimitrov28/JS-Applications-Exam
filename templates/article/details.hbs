{{>header}}
<div class="container details">
    <div class="details-content">
        <h2>{{title}}</h2>
        <strong>{{category}}</strong>
        <p>{{content}}</p>

        {{#if op}}
        <div class="buttons">
            <a href="#/delete" class="btn delete">Delete</a>
            <a href="#/edit" class="btn edit">Edit</a>
        </div>
        {{else}}
        <div class="buttons">
            <a href="#/home" class="btn edit">Back</a>
        </div>
        {{/if}}
    </div>
</div>
{{> footer}}